<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Franklinsqlife.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Eliminar / Actualizar Estudiantes"/>
            <Entry x:Name="txtNombre" Placeholder="Nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Conatrasena"/>

            <Button x:Name="btnActualizar" Text="Actuaizar" Clicked="btnActualizar_Clicked"/>
            <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnActualizar_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>